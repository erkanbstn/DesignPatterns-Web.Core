@model Product
@{
    ViewData["Title"] = "UpdateProduct";
}

<h1>Ürün Düzenle</h1>
<br />
<form method="post">
    <input type="hidden" class="form-control" asp-for="ProductId" />
    <span>Ad</span>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <span>Soyad</span>
    <input type="text" class="form-control" asp-for="Stock" />
    <br />
    <span>Adres</span>
    <input type="text" class="form-control" asp-for="Price" />
    <br />
    <span>Şehir</span>
    <input type="text" class="form-control" asp-for="Category" />
    <br />
    <input type="submit" class="btn btn-primary" value="Değişiklikleri Kaydet" />
</form>
