@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategori Liste</h1>
<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td><a href="~/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="~/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Düzenle</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="~/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>

</div>

